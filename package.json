{
  "name": "sql-deployment-tool",
  "version": "1.1.0",
  "description": "DB部署工具",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack:exe": "powershell -ExecutionPolicy Bypass -File scripts\\build-win.ps1",
    "publish:release": "powershell -ExecutionPolicy Bypass -File scripts\\release-win.ps1"
  },
  "keywords": [
    "electron",
    "sql",
    "deployment",
    "postgresql"
  ],
  "author": "DB部署工具开发团队",
  "license": "MIT",
  "build": {
    "appId": "com.sqldeployment.tool",
    "productName": "DB部署工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/SQL图标.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/SQL图标.ico",
      "uninstallerIcon": "assets/SQL图标.ico",
      "installerHeaderIcon": "assets/SQL图标.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DB部署工具",
      "language": "2052"
    },
    "publish": {
      "provider": "github",
      "owner": "EeiMo",
      "repo": "DB_Deployment_Tool"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "fs-extra": "^11.1.1",
    "pg": "^8.16.3",
    "xlsx": "^0.18.5"
  }
}
